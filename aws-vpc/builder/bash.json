{
    "name": "{{.Name}}",
    "info": "/{{.Domain}}/task/{{.Name}}/{{.Id}}",
    "announce": "/{{.Domain}}/task/{{.Name}}/{{.Id}}",
    "success": "/{{.Domain}}/task/{{.Name}}/{{.Id}}/success",
    "error": "/{{.Domain}}/task/{{.Name}}/{{.Id}}/error",
    "status": "mqtt://iot.eclipse.org:1883/{{.Domain}}/task/{{.Name}}/{{.Id}}",
    "stdin": "mqtt://iot.eclipse.org:1883/{{.Domain}}/task/{{.Name}}/{{.Id}}.in",
    "stdout": "mqtt://iot.eclipse.org:1883/{{.Domain}}/task/{{.Name}}/{{.Id}}.out",
    "stderr": "mqtt://iot.eclipse.org:1883/{{.Domain}}/task/{{.Name}}/{{.Id}}.out",
    "cmd" : {
	"path": "/bin/bash"
    },
    "config": [
	{
	    "init": true,
	    "description":"Runing task {{.Name}} in {{env "DASH_DOMAIN"}}",
            "url": "http://qoriolabs.github.io/public/builder/bash.conf",
            "path": "./bash-{{.Id}}.conf"
	}
    ],
    "source" : [
	"zk:///dev.qoriolabs.com/global/env"
    ],
    "__mount" : [
	{
	    "mount" : "/mnt/dash/mqtt",
	    "resource":"mqtt://iot.eclipse.org:1883/{{.Domain}}/task/{{.Name}}/{{.Id}}/mnt"
	},
	{
	    "mount" : "/mnt/dash/zk",
	    "resource": "zk:///{{.Domain}}/task/{{.Name}}/{{.Id}}/mnt"
	}
    ]
}
